function [avgH,avgS,avgV] = calcAvgHSV(path,output)


% results = cell(size(files,1)-2,4);

for i = 3:103%size(files,1)
    filename = files(i).name
    if(strcmp(filename(size(filename,2)-2:size(filename,2)),'jpg') || strcmp(filename(size(filename,2)-2:size(filename,2)),'png') )
        image = imread(strcat(path,'/',files(i).name));

        if size(image,3) == 3
            hsv = rgb2hsv(image);
%             hsv = RGBtoHSV(image);
            means = mean(mean(hsv));
            avgHue = means(1);
            avgSat = means(2);
            avgInt = means(3);

        elseif size(image,3) == 1
            avgHue = 0;
            avgSat = 0;
            avgInt = mean(mean(image(:,:,1)));
        else
            % OR SOMETHING ELSE?
            avgHue = 0;
            avgSat = 0;
            avgInt = 0;
        end
        
        fprintf(outputFile, '%s,%f,%f,%f\n', filename,avgHue,avgSat,avgInt);
        
    end
end

fclose(outputFile);

end