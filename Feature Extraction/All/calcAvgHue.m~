function [avgHue, avgSat, avgInt] = calcAvgHSV(path,output)

files = dir(path);
outputFile = fopen(output, 'w');
% results = cell(size(files,1)-2,4);

for i = 3:size(files,1)
    filename = files(i).name;
    if(strcmp(filename(size(filename,2)-2:size(filename,2)),'jpg') || strcmp(filename(size(filename,2)-2:size(filename,2)),'png') )
        image = imread(strcat(path,'/',files(i).name));

        if size(image,3) == 3
            hsv = rgb2hsv(image);
            means = mean(mean(hsv));
            avgHue = means(1);
            avgSat = means(2);
            avgInt = means(3);

        elseif size(image,3) == 1
            avgHue = 0;
            avgSat = 0;
            avgInt = mean(mean(image(:,:,1)));
        else
            % OR SOMETHING ELSE?
            avgHue = 0;
            avgSat = 0;
            avgInt = 0;
        end
        
        fprintf(edgeFile, '%s,%f,%f,%f\n', filename,avgHue,);
        
    end
end


end